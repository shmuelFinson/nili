{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nili CLI",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/cli.js",
      "args": ["run"],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/opt/homebrew/bin/node",
      "sourceMaps": true
    }
  ]
}
